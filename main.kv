#:import Factory kivy.factory.Factory
<RootWidget>:
    on_parent: root.on_load()
    txtsearch:search_sch_textinput
    guimap: gui_map
    menu_scroll: menu_scroll
    level_spinner: level_spinner
    region_spinner: region_spinner
    lbl_results_count: lbl_results_count
    pcode: pcode
    radius: radius
    isnear: isnear
    btn_viewFav: btn_viewFav
    btnCCA: btnCCA
    canvas:
        Color:
            rgba: rgba('#ffffff')
        Rectangle:
            pos: self.pos
            size: self.size
    #Map
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        BoxLayout:
            size_hint: (0.75, 0.9)
            MapView:
                lon: 103.8198
                lat: 1.3521
                zoom: 12
                id: gui_map
    FloatLayout:
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'
            padding: (0, 0, 20, 20)
            Button:
                size_hint:(0.1, 0.1)
                text: 'View Favorites'
                on_release: root.viewFavoritesList()
                id: btn_viewFav
    #Left menu bar
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.25, 0.8)
            padding: (20, 10, 20, 0)
            spacing: 10
            canvas:
                Color:
                    rgba: rgba('#f8bd36')
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                id: lbl_results_count
                size_hint: None, None
                size: self.texture_size
                color: rgba('#000000')
            ScrollView:
                id: menu_scroll
                scroll_type: ['bars', 'content']
                bar_width: 10
                scroll_wheel_distance: 80
                bar_color: rgba('#c7c7c7')
    #Left menu bar top
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.25, 0.2)
            padding: (20, 0, 20, 10)
            spacing: 5
            canvas:
                Color:
                    rgba: rgba('#f5ae31')
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: 'SEARCH'
                text_size: self.size
                color: rgba('#000000')
            TextInput:
                background_color: rgba('#ef9328')
                hint_text: 'Find a school'
                hint_text_color: rgba('#ffffff')
                foreground_color: rgba('#ffffff')
                cursor_color: rgba('#000000')
                multiline: False
                on_text_validate: root.on_enter()
                id: search_sch_textinput
            TextInput:
                background_color: rgba('#ef9328')
                hint_text: 'Your postal code'
                hint_text_color: rgba('#ffffff')
                foreground_color: rgba('#ffffff')
                cursor_color: rgba('#000000')
                multiline: False
                on_text: root.scroll_view_load()
                id: pcode
                disabled: True
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1, 1)
                padding: (0, 0, 0, 0)
                spacing: 5
                TextInput:
                    background_color: rgba('#ef9328')
                    hint_text: 'Max distance (km)'
                    hint_text_color: rgba('#ffffff')
                    foreground_color: rgba('#ffffff')
                    cursor_color: rgba('#000000')
                    multiline: False
                    on_text_validate: root.scroll_view_load()
                    id: radius
                    disabled: True
                BoxLayout:
                    padding: (20,0,20,0)
                    Label:
                        text: 'Toggle Distance Filter:'
                        color: rgba('#000000')
                    CheckBox:
                        size_hint_x: 0.1
                        id: isnear
                        on_active: root.enableDistanceFilter(), root.scroll_view_load()
                        color: rgba('#000000')


    #Grey menu bar
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (0.75, 0.1)
            spacing: 3
            canvas:
                Color:
                    rgba: rgba('#b8b8b8')
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                orientation: 'vertical'
                padding: (20, 0, 20, 10)
                spacing: 5
                canvas:
                    Color:
                        rgba: rgba('#cecece')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: 'EDUCATION LEVEL'
                    text_size: self.size
                    color: rgba('#000000')
                Spinner:
                    canvas.before:
                        Color:
                            rgba: rgba('#ededed')
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                    color: rgba('#000000')
                    background_normal: ''
                    background_color: rgba('#cecece')
                    text: 'ALL'
                    values: 'ALL', 'PRIMARY', 'SECONDARY', 'JUNIOR COLLEGE', 'CENTRALISED INSTITUTE', 'MIXED LEVEL'
                    id: level_spinner
                    on_text: root.scroll_view_load()
            BoxLayout:
                orientation: 'vertical'
                padding: (20, 0, 20, 10)
                spacing: 5
                canvas:
                    Color:
                        rgba: rgba('#cecece')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: 'NEAR LOCATION'
                    text_size: self.size
                    color: rgba('#000000')
                Spinner:
                    canvas.before:
                        Color:
                            rgba: rgba('#ededed')
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                    color: rgba('#000000')
                    background_normal: ''
                    background_color: rgba('#cecece')
                    text: 'ALL'
                    values: 'ALL', 'NORTH', 'SOUTH', 'EAST', 'WEST'
                    id: region_spinner
                    on_text: root.scroll_view_load()
            BoxLayout:
                orientation: 'vertical'
                padding: (20, 0, 20, 10)
                spacing: 5
                canvas:
                    Color:
                        rgba: rgba('#cecece')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: 'CCAs'
                    text_size: self.size
                    color: rgba('#000000')
                Button:
                    canvas.before:
                        Color:
                            rgba: rgba('#ededed')
                        Line:
                            width: 2
                            rectangle: self.x, self.y, self.width, self.height
                    color: rgba('#000000')
                    background_normal: ''
                    background_color: rgba('#cecece')
                    text: 'None Selected'
                    id: btnCCA
                    on_release: root.cca_popup()